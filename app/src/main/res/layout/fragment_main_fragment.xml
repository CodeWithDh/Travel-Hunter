<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".Main_fragment">

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">

           <RelativeLayout
               android:id="@+id/upper"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="220dp">

               <RelativeLayout
                   android:id="@+id/videoCap"
                   android:layout_width="170dp"
                   android:layout_height="170dp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/circlebtn">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:text="SPY CAM"
                       android:textColor="#fff"
                       android:textSize="20sp"
                       android:textStyle="bold" />

               </RelativeLayout>




           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/sosBtn"
               android:layout_below="@+id/upper"
               android:layout_width="match_parent"

               android:layout_height="wrap_content">

               <androidx.cardview.widget.CardView
                   android:id="@+id/soss"
                   app:cardCornerRadius="20dp"
                   android:layout_width="match_parent"
                   android:layout_marginStart="40dp"
                   android:backgroundTint="#2196F3"
                   android:layout_marginEnd="40dp"
                   android:layout_height="60dp">

                   <TextView
                       android:layout_gravity="center"
                       android:textStyle="bold"
                       android:textColor="#fff"
                       android:textSize="30sp"
                       android:text="SOS"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </androidx.cardview.widget.CardView>


           </RelativeLayout>

           <RelativeLayout
               android:layout_marginTop="20dp"
               android:layout_below="@id/sosBtn"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:background="@drawable/layout_back"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">


                   <RelativeLayout
                       android:id="@+id/first_fold"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <androidx.cardview.widget.CardView
                           android:padding="20dp"
                           android:id="@+id/quick_call"
                           android:backgroundTint="#fff"
                           android:layout_marginStart="20dp"
                           android:layout_alignParentStart="true"
                           android:layout_marginTop="60dp"
                           android:layout_width="130dp"
                           app:cardCornerRadius="20dp"
                           android:layout_height="130dp">

                           <ImageView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="center"
                               android:src="@drawable/phone"
                               android:layout_width="60dp"
                               android:layout_height="60dp"/>

                           <TextView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="bottom|center"
                               android:textStyle="bold"
                               android:textColor="#E91E63"
                               android:text="Quick Call"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:padding="20dp"
                           android:id="@+id/send_location"
                           android:backgroundTint="#fff"
                           android:layout_marginEnd="20dp"
                           android:layout_marginStart="10dp"
                           android:layout_alignEnd="@id/quick_call"
                           android:layout_alignParentEnd="true"
                           android:layout_marginTop="60dp"
                           android:layout_width="130dp"
                           app:cardCornerRadius="20dp"
                           android:layout_height="130dp">

                           <ImageView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="center"
                               android:src="@drawable/location"
                               android:layout_width="80dp"
                               android:layout_height="80dp"/>

                           <TextView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="bottom|center"
                               android:textStyle="bold"
                               android:textColor="#E91E63"
                               android:text="Quick Location"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </androidx.cardview.widget.CardView>

                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_below="@id/first_fold"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:id="@+id/sms"
                           android:padding="20dp"
                           android:backgroundTint="#fff"
                           android:layout_marginStart="20dp"
                           android:layout_alignParentStart="true"
                           android:layout_marginTop="60dp"
                           android:layout_width="130dp"
                           app:cardCornerRadius="20dp"
                           android:layout_height="130dp">

                           <ImageView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="center"
                               android:src="@drawable/message"
                               android:layout_width="60dp"
                               android:layout_height="60dp"/>

                           <TextView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="bottom|center"
                               android:textStyle="bold"
                               android:textColor="#E91E63"
                               android:text="Quick Message"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:padding="20dp"
                           android:layout_marginStart="10dp"
                           android:layout_alignEnd="@id/sms"
                           android:id="@+id/police_location"
                           android:backgroundTint="#fff"
                           android:layout_marginEnd="20dp"
                           android:layout_alignParentEnd="true"
                           android:layout_marginTop="60dp"
                           android:layout_width="130dp"
                           app:cardCornerRadius="20dp"
                           android:layout_height="130dp">

                           <ImageView
                               android:layout_marginBottom="10dp"
                               android:layout_gravity="center"
                               android:src="@drawable/policeman"
                               android:layout_width="80dp"
                               android:layout_height="80dp"/>

                           <TextView
                               android:layout_marginBottom="2dp"
                               android:layout_gravity="bottom|center"
                               android:textStyle="bold"
                               android:textColor="#E91E63"
                               android:gravity="center"
                               android:text="Nearest Police Station"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </androidx.cardview.widget.CardView>

                   </RelativeLayout>



               </RelativeLayout>
               <view
                   android:id="@+id/previewView"
                   class="androidx.camera.view.PreviewView"
                   android:layout_width="0dp"
                   android:layout_height="0dp" />


           </RelativeLayout>



       </LinearLayout>

   </ScrollView>


</RelativeLayout>