<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView android:id="@+id/top_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_location_24"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <TextView android:id="@+id/loction_name"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="Chandigarh - IN "
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/top_ic"/>

                <Spinner android:id="@+id/spinner"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/loction_name"
                    android:backgroundTint="@color/black"/>

                <TextView android:id="@+id/multi_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EN -IN"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/multi_language_spinner"/>

                <Spinner android:id="@+id/multi_language_spinner"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/black"/>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/middle_bar"
                android:background="@drawable/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/top_bar">

                <TextView android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Explore Best With US!"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/icon_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/middle_bar">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView android:id="@+id/near_hotel_destination"
                        android:background="@drawable/hotel"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                    <TextView android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOTELS"
                        android:layout_below="@+id/near_hotel_destination"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/near_destination"
                        android:background="@drawable/destination"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEAR PLACES"
                        android:layout_below="@+id/near_destination"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/near_street_food"
                        android:background="@drawable/street_food"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STREET FOOD"
                        android:layout_below="@+id/near_street_food"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/near_shopping_places"
                        android:background="@drawable/shopping"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOPPING"
                        android:layout_below="@+id/near_shopping_places"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/icon_layout">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="BEST TO VISIT"
                    android:layout_marginStart="30dp"/>

            </LinearLayout>
            <LinearLayout

                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/best_to_vist"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/text_layout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/leaser_destination"
                    android:layout_width="140dp"

                    android:layout_height="140dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/leaser_images"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/learknow"/>

                        <TextView
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LESS- KNOWN DESTINATIONS"
                            android:layout_below="@+id/leaser_images"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/popular_dest"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="50dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/pupular_image"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/popular"/>
                        <TextView android:textColor="#000"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POPULAR DESTINATIONS"
                            android:layout_below="@+id/pupular_image"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:id="@+id/text_layout1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/icon_layout">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="BEST TO VISIT"
                    android:layout_marginStart="30dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/text_layout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/icon_layout">

                <TextView
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="BEST TO VISIT"
                    android:layout_marginStart="30dp"/>

            </LinearLayout>

            <LinearLayout

                android:orientation="horizontal"
                android:id="@+id/text_layout_two"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/best_to_vist">

                <TextView
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Explore More..."
                    android:layout_marginStart="30dp"/>

            </LinearLayout>

            <LinearLayout android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/explore_more"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/text_layout_two">

                <androidx.cardview.widget.CardView
                    android:id="@+id/best_parks"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView android:id="@+id/parks"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/parks"/>

                        <TextView android:textSize="12sp"
                            android:textColor="#000"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BEST NEAR PARKS"
                            android:layout_below="@+id/parks"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/best_library"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="23dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView android:id="@+id/Spend_alone"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/library"/>

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIBRARY"
                            android:layout_below="@+id/Spend_alone"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="23dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView android:id="@+id/Best_nature"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:src="@drawable/popular"/>
                        <TextView android:textSize="12sp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEACEFUL PLACES"
                            android:layout_below="@+id/Best_nature"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>